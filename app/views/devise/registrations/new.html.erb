
<h2>Sign up</h2>

<% if @site.errors.any? %>
   <div id="error_explanation">
       <ul>
           <% @site.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
           <% end %>
       </ul>
   </div>
<% end %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  

  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name %></div>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div>
       <%= f.label :password_confirmation %><br />
       <%= f.password_field :password_confirmation %>
  </div>
  
  <%#= fields_for @site do |site| %>
    <div>
       <%#= f.label :type %> URL <br />
       <%#= f.select :type, options_for_select(%w(AccountUser Company Doctor Patient)) %>
       http:// <input type="text" maxlength="75" id="site_name" name="site[name]" class="short" /> .familypractice.com 
    </div> <br />
  <%# end %>
  
  <div><%= f.submit "Sign up" %> Or <span class="cancel"> <%= link_to 'Cancel', "/users/sign_in" %> </span></div>
  
<% end %>

<%#= render :partial => "devise/shared/links" %>
