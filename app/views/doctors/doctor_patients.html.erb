

<p>
    This is Doctors Patients Page
</p>


<% if @my_patients.nil? %>
   
      <p> There are no Patients for you right now </p>
      
<% else %>
    
     <table>
         <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>
         </tr>

         <% @my_patients.each do |p| %>
         
             <% patient_record = Patient.find_by_id(p.patient_id) %>
              <%  unless patient_record.blank? %>
             <tr>
                 <td><%= patient_record.first_name %></td>
                 <td><%= patient_record.email %></td> &nbsp;&nbsp;&nbsp;&nbsp;
                 <td><%= link_to "View Details", "/patient_details/#{patient_record.id}" %></td>               
             </tr>
            <% end %>
          <% end %>
          
      </table>  <br />


<% end %>




